# Staging Environment Configuration
# Copy to .env.staging and update with your actual values

# Application Configuration
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging.your-domain.com
NEXT_PUBLIC_APP_NAME="HeyPeter Academy (Staging)"

# Supabase Configuration (Use separate staging project)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-supabase-service-role-key
SUPABASE_DB_PASSWORD=your-staging-database-password

# Authentication
NEXTAUTH_URL=https://staging.your-domain.com
NEXTAUTH_SECRET=your-staging-32-character-secret-key

# Email Configuration (Use test email service)
EMAIL_FROM=staging@your-domain.com
EMAIL_SERVER_HOST=smtp.mailtrap.io
EMAIL_SERVER_PORT=2525
EMAIL_SERVER_USER=your-mailtrap-username
EMAIL_SERVER_PASSWORD=your-mailtrap-password

# Redis Cache (Optional - staging instance)
REDIS_URL=redis://your-staging-redis:6379
REDIS_PASSWORD=your-staging-redis-password

# Analytics and Monitoring (Separate staging tracking)
VERCEL_ANALYTICS_ID=your-staging-analytics-id
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id

# CDN Configuration (Staging CDN)
NEXT_PUBLIC_CDN_URL=https://staging-cdn.your-domain.com
AWS_S3_BUCKET=your-staging-s3-bucket
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret-key
AWS_REGION=us-east-1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@your-staging-db:5432/postgres

# Security (More relaxed for testing)
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:3000
JWT_SECRET=your-staging-jwt-secret
ENCRYPTION_KEY=your-staging-encryption-key

# Rate Limiting (Higher limits for testing)
RATE_LIMIT_PER_MINUTE=200
RATE_LIMIT_PER_HOUR=2000

# Performance
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0  # Higher sample rate for testing

# Debug and Testing
DEBUG=true
ENABLE_DEBUG_LOGGING=true
SKIP_EMAIL_VERIFICATION=true  # For testing purposes